{
	"schemaVersion": 1,
	"id": "plumbum",
	"version": "${version}",
	"name": "Plumbum",
	"description": "\"Plumbing system for the Sodium render pipeline.\" \nFork of Indium. Supports FREX and FRAPI renders.",
	"authors": [
		"spiralhalo",
		"comp500"
	],
	"contact": {
		"sources": "https://github.com/spiralhalo/Plumbum",
		"homepage": "https://github.com/spiralhalo/Plumbum",
		"issues": "https://github.com/spiralhalo/Plumbum/issues"
	},
	"license": "Apache-2.0",
	"icon": "assets/plumbum/icon.png",
	"environment": "client",
	"custom": {
		"fabric-renderer-api-v1:contains_renderer": true
	},
	"entrypoints": {
		"client": [
      "io.github.spiralhalo.plumbum.Plumbum"
		]
	},
	"mixins": [
		"plumbum.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.8.0",
		"minecraft": "~1.19",
		"sodium": "0.4.2",
		"fabric-renderer-api-v1": ">=0.3.0",
		"fabric-resource-loader-v0": ">=0.4.0"
	}
}
